<Window x:Class="HotXpressTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotXpressTime"
        mc:Ignorable="d"
        Title="MainWindow" Height="1792" Width="828">
    <Window.Background>
        <ImageBrush 
               ImageSource="images/figDisplay1.PNG"
               Opacity=".5"/>
    </Window.Background>
    <ScrollViewer>
        <Grid Height="1792" Width="828">
            <Frame x:Name="MainWindowFrame" Margin="0,0,0,10" NavigationUIVisibility="Hidden"/>
            <StackPanel Orientation="Horizontal" Height="124" VerticalAlignment="Top">
                <Button x:Name="Menu_Button" Content="Menu" 
                    FontSize="50" 
                    MinWidth="300" 
                    MinHeight="100" 
                    Margin="5,5,5,5"
                    Cursor="Hand"
                    Background="SandyBrown"
                    Foreground="WhiteSmoke"
                    FontFamily="Arial" Click="navToMenu">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="CheckoutButton" Content="Checkout" 
                    FontSize="50" 
                    MinWidth="300" 
                    MinHeight="100" 
                    Margin="0,5,5,5"
Cursor="Hand"
                    Background="SandyBrown"
                    Foreground="WhiteSmoke"
                    FontFamily="Arial" Click="Nav_ToCheckout">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="LoginButton" Content="Log In" 
                    FontSize="50" 
                    MinWidth="190"
                    MaxWidth="190"
                    MinHeight="100" 
                    Margin="0,5,0,5"
                    Cursor="Hand"
                    Background="SandyBrown"
                    Foreground="WhiteSmoke"
                    FontFamily="Arial" Click="Nav_ToLogin">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
            <TextBlock 
            Name="HotXpressTextBlock"
            HorizontalAlignment="Center" 
            Height="150" 
            Margin="0,575,0,0" 
            TextWrapping="Wrap" 
            Text="Hot Xpress"
            FontSize="100"
            FontFamily="Batang"
            Foreground="GhostWhite"
            TextAlignment="Center"
            VerticalAlignment="Top" 
            Width="594"/>
            <TextBlock x:Name="WaitTimeBlock" HorizontalAlignment="Left" 
                       Height="83" 
                       Margin="9,134,0,0" 
                       TextWrapping="Wrap" 
                       Text=" Wait Time: " 
                       VerticalAlignment="Top" 
                       Width="239"
                       Background="SandyBrown"
                       Foreground="GhostWhite"
                       FontSize="45"
                       Opacity=".9"/>
            <Button x:Name="LogInButton" Content="Log In" HorizontalAlignment="Center" VerticalAlignment="Top" 
                Width="396" Height="67" 
                Background="LightCoral"
                Foreground="WhiteSmoke"
                Cursor="Hand"
                FontFamily="Arial"
                FontSize="40" Margin="0,896,0,0">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="SignUpButton" Content="Sign Up" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Width="396" Height="67" 
                Background="LightSeaGreen"
                Foreground="WhiteSmoke"
                Cursor="Hand"
                FontFamily="Arial"
                FontSize="40" Margin="0,998,0,0" Click="NavTo_Sign_Up_Page">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
            <TextBlock x:Name="QueueBlock" 
                HorizontalAlignment="Left" 
                Height="83" 
                Margin="504,134,0,0" 
                TextWrapping="Wrap" 
                Text=" Queue:" 
                VerticalAlignment="Top" 
                Width="170"
                Background="SandyBrown"
                Foreground="GhostWhite"
                FontSize="45"
                Opacity=".9"/>
            <TextBlock x:Name="CurrentLocationBlock" HorizontalAlignment="Left" 
                Height="83" 
                Margin="10,236,0,0" 
                TextWrapping="Wrap" 
                Text=" Current Location: " 
                VerticalAlignment="Top" 
                Width="365"
                Background="SandyBrown"
                Foreground="GhostWhite"
                FontSize="45"
                Opacity=".9"/>
            <TextBlock x:Name="UpdateLocationBlock" HorizontalAlignment="Left" 
                Height="83" 
                Margin="375,236,0,0" 
                TextWrapping="Wrap" 
                Text=" " 
                VerticalAlignment="Top" 
                Width="427"
                Background="SandyBrown"
                Foreground="GhostWhite"
                FontSize="45"
                Opacity=".9"/>
            <TextBlock x:Name="UpdateQueueBlock" 
                HorizontalAlignment="Left" 
                Height="83" 
                Margin="674,134,0,0" 
                TextWrapping="Wrap" 
                Text=" " 
                VerticalAlignment="Top" 
                Width="128"
                Background="SandyBrown"
                Foreground="GhostWhite"
                FontSize="45"
                Opacity=".9"/>
            <TextBlock x:Name="UpdateWaitTimeBlock" HorizontalAlignment="Left" 
                Height="83" 
                Margin="248,134,0,0" 
                TextWrapping="Wrap" 
                Text=" Minutes" 
                VerticalAlignment="Top" 
                Width="238"
                Background="SandyBrown"
                Foreground="GhostWhite"
                FontSize="45"
                Opacity=".9"/>

        </Grid>
    </ScrollViewer>
</Window>
