<Page x:Class="HotXpressTime.Sign_Up_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotXpressTime"
      mc:Ignorable="d" 
      d:DesignHeight="1792" d:DesignWidth="828"
      Title="Sign_Up_Page">

    <Grid>
        <TextBlock HorizontalAlignment="Center" 
                   Height="72" 
                   Margin="0,378,0,0" 
                   TextWrapping="Wrap" 
                   Text="Sign up!" 
                   VerticalAlignment="Top" 
                   FontSize="50"
                   FontWeight="Bold"
                   Background="LightGray"
                   TextAlignment="Center"
                   
                   Width="578"/>
        <PasswordBox x:Name="passwordBox" MaxLength="16" PasswordChar="#" FontSize="50"
             PasswordChanged="passwordBox_PasswordChanged" Margin="24,681,24,1041"/>

        <TextBlock x:Name="statusText" Margin="10" HorizontalAlignment="Center" />
        <TextBox x:Name="UsernameBox" HorizontalAlignment="Center" 
            Height="69" 
            Margin="0,553,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top"
            FontSize="52"
            TextAlignment="Center"
            Background="#FFF6F6F6"
            Foreground="DarkGray"
            Width="780"/>
        <Button x:Name="CreateProfileButton" Content="Create Profile" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Width="302" Height="67" 
            Background="LightSeaGreen"
            Foreground="WhiteSmoke"
            Cursor="Hand"
            FontFamily="Arial"
            FontSize="40" Margin="0,947,0,0" Click="CreateProfileButton_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Height="78" 
                   Margin="0,499,0,0" 
                   TextWrapping="Wrap" 
                   Text="Username"
                   FontSize="50"
                   
                   Width="226">
            <TextBlock.Effect>
                <DropShadowEffect
      ShadowDepth="2"
      Direction="225"
      Color="WhiteSmoke"
     
     BlurRadius="0"/>
            </TextBlock.Effect>
        </TextBlock>
        <TextBlock HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Height="78" 
            Margin="0,622,0,0" 
            TextWrapping="Wrap" 
            Text="Password"
            FontSize="50"
                   
            Width="226">
            <TextBlock.Effect>
                <DropShadowEffect
                    ShadowDepth="2"
                    Direction="225"
                    Color="WhiteSmoke"
     
                    BlurRadius="0"/>
            </TextBlock.Effect>
        </TextBlock>
        <TextBlock HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Height="78" 
            Margin="0,751,0,0" 
            TextWrapping="Wrap" 
            Text="Re-Enter Password"
            FontSize="50"
                   
            Width="434">
            <TextBlock.Effect>
                <DropShadowEffect
                    ShadowDepth="2"
                    Direction="225"
                    Color="WhiteSmoke"
     
                    BlurRadius="0"/>
            </TextBlock.Effect>
        </TextBlock>
        <PasswordBox x:Name="passwordBox_ReEnter" MaxLength="16" PasswordChar="#" FontSize="50"
            PasswordChanged="passwordBox_PasswordChanged" Margin="24,807,24,915"/>
    </Grid>
</Page>
